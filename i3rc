#!/usr/bin/i3

gaps inner 16
gaps outer 8
for_window [class="^.*"] border pixel 4
for_window [class="mpv"] floating enable
for_window [class="Sxiv"] floating enable
for_window [class="feh"] floating enable
for_window [class="png"] floating enable
for_window [class="jpg"] floating enable
for_window [class="bmp"] floating enable
for_window [class="gif"] floating enable
for_window [class="xst"] floating enable

set $t $TERMINAL
set $m Mod4
set $h Mod1

bindsym $m+q			kill

bindsym $m+Return               exec $t $FILE
bindsym $h+Return               exec xterm $FILE
bindsym $m+Escape 		exec xst -f monospace-12 -e fish
bindsym $h+equal                gaps outer current minus 8
bindsym $h+minus                gaps outer current plus 8
bindsym $m+equal                gaps inner current minus 2
bindsym $m+minus                gaps inner current plus 2

bindsym $m+space		split toggle
bindsym $m+g                    bar mode toggle
bindsym $m+f			fullscreen toggle
bindsym $m+a			floating toggle

bindsym $m+u  		        exec winresize left
bindsym $m+i		        exec winresize down
bindsym $m+o 			exec winresize up
bindsym $m+p			exec winresize right

bindsym $m+y                    exec dispsel
bindsym $m+d			exec dmenu_run
bindsym $m+s            	exec maim -s -m 10 ~/$(date +%s).png

bindsym $m+t                    exec xterm -hold -e curl wttr.in
bindsym $m+r                    exec redshift -O 2500
bindsym $m+e                    exec redshift -x

bindsym $m+h			focus left
bindsym $h+h                    move left 30
bindsym $m+j			focus down
bindsym $h+j                    move down 30
bindsym $m+k			focus up
bindsym $h+k    		move up 30
bindsym $m+l			focus right
bindsym $h+l    	        move right 30

bindsym $m+b                    exec $BROWSER
bindsym $h+b                    exec firejail $BROWSER --no-remote
bindsym $m+v                    exec vimb -i -c ~/.config/vimb/vimbrc

bindsym $m+m                    exec pamixer -t
bindsym $m+parenleft            exec pamixer -i 5
bindsym $m+parenright           exec pamixer -d 5

bindsym $m+slash                exec xterm -e ytop -fap -c vice -I 1/2
#bindsym $m+slash                exec $t -e gotop -paf -r 2
bindsym $m+Tab                  exec xterm -e htop

# Set Xresources colors:
set_from_resource $darkblack	color0  #000000
set_from_resource $black	color8  #000000
set_from_resource $darkred	color1  #000000
set_from_resource $red		color9  #000000
set_from_resource $darkgreen	color2  #000000
set_from_resource $green	color10 #000000
set_from_resource $darkyellow	color3  #000000
set_from_resource $yellow	color11 #000000
set_from_resource $darkblue	color4  #000000
set_from_resource $blue		color12 #000000
set_from_resource $darkmagenta	color5  #000000
set_from_resource $magenta	color13 #000000
set_from_resource $darkcyan	color6  #000000
set_from_resource $cyan		color14 #000000
set_from_resource $darkwhite	color7  #000000
set_from_resource $white	color15 #000000

#                       BORDER          BACKGROUND      TEXT            INDICATOR               CHILD_BORDER
client.focused		$red		$red		$magenta	$darkmagenta		$darkblue
client.unfocused	$transparent	$blue		$white		$darkblue		$darkblack
client.focused_inactive	$transparent	$blue		$white		$darkblue		$darkblack
client.urgent		$darkred	$darkred	$black		$darkred		$darkred
client.background       $black

bar {
	font pango:mono 10
	colors {
			background $darkblack
			statusline $white
			separator $red
			focused_workspace $cyan $darkwhite $darkmagenta
      			inactive_workspace $magenta $darkmagenta $black
        }
	status_command i3blocks
	position bottom
	mode dock
	modifier None
}

set $ws1 " 1 "
set $ws2 " 2 "
set $ws3 " 3 "
set $ws4 " 4 "
set $ws5 " 5 "
set $ws6 " 6 "
set $ws7 " 7 "
set $ws8 " 8 "
set $ws9 " 9 "

# switch to workspace
bindsym $m+w            workspace back_and_forth
bindsym $m+1  	        workspace $ws1
bindsym $m+2  	        workspace $ws2
bindsym $m+3      	workspace $ws3
bindsym $m+4      	workspace $ws4
bindsym $m+5  	        workspace $ws5
bindsym $m+6  	        workspace $ws6
bindsym $m+7  	        workspace $ws7
bindsym $m+8  	        workspace $ws8
bindsym $m+9  	        workspace $ws9

# move focused container to workspace and switch to that workspace
bindsym $h+1            move container to workspace $ws1 ;; workspace $ws1
bindsym $h+2 	        move container to workspace $ws2 ;; workspace $ws2
bindsym $h+3            move container to workspace $ws3 ;; workspace $ws3
bindsym $h+4            move container to workspace $ws4 ;; workspace $ws4
bindsym $h+5            move container to workspace $ws5 ;; workspace $ws5
bindsym $h+6            move container to workspace $ws6 ;; workspace $ws6
bindsym $h+7            move container to workspace $ws7 ;; workspace $ws7
bindsym $h+8            move container to workspace $ws8 ;; workspace $ws8
bindsym $h+9            move container to workspace $ws9 ;; workspace $ws9

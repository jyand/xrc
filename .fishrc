#!/usr/bin/fish
fish_vi_key_bindings
fish_vi_cursor

abbr v 'nvim'
abbr V 'doas nvim'
abbr vi 'nvim ~/.config/i3/config'
abbr vb 'nvim ~/.config/i3blocks/config'
abbr vf 'nvim ~/.config/fish/config.fish'
abbr vn 'nvim ~/.config/nvim/init.vim'
abbr vv 'nvim ~/.config/vifm/vifmrc'
abbr vp 'nvim ~/.profile'
abbr vr 'nvim ~/.rcrc'
abbr vx 'nvim ~/.Xmodmap'
abbr vh 'nvim ~/scripts/browser/HOME.html'

abbr q 'exit'
abbr d 'doas'
abbr r 'clear'
abbr k 'kill -a'
abbr l 'less'
abbr m 'man'
abbr M 'doas mount'
abbr U 'doas umount -R /mnt'
abbr i 'touch'
abbr e 'echo'
abbr a 'cat'
abbr f 'grep'
abbr s 'sed'
abbr lb 'lsblk'
abbr n 'wc -l'
abbr w 'whereis'

abbr xi 'doas xbps-install -Su'
abbr xr 'doas xbps-remove -R'
abbr x 'xbps-query -Rs'
abbr xs 'xbps-query -S'
abbr xl 'xbps-query -l'
abbr W 'wget'
abbr c 'curl'

abbr g 'git'
abbr gg 'git clone'
abbr G 'git pull'
abbr ga 'git add --all'
abbr gc 'git commit -m'
abbr gp 'git push -u origin master'
abbr gb 'git branch'
abbr gm 'git merge'
abbr gs 'git status'

# nvim:set ft=sh

separator_block_width=32
markup=pango

[volume]
command=pamixer --get-volume-human || --get-mute
interval=1
color=#33ff00

[clock-time]
command=echo $(date +%R:%S)
interval=1
color=#ffff00

[clock-date]
command=echo $(date +%A%t%d%t%B%t%Y%t)
interval=3600
color=#ff8800

[clk frequency]
command=echo $(cpupower -c all frequency-info | grep asserted | sed 's/current CPU frequency: //g' | sed 's/ (asserted by call to kernel)//g')
interval=1
color=#ff0000

[window pid]
command=xdo pid
interval=1
color=#9900ff

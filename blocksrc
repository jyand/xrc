#!/bin/i3blocks

separator_block_width=20
markup=pango

[volume]
command=pamixer --get-volume-human || pamixer --get-mute
interval=1

[clock-time]
command=echo '  ' $(date +%R:%S) '  '
interval=1

[clock-date]
command=echo $(date +%d%t%A%t%B%t%Y%t)
interval=3600

[OS/Kernel]
command=echo $(uname -o && uname -r)
interval=36000

[clk frequency]
command=echo $(cpupower -c all frequency-info | grep asserted | sed 's/current CPU frequency: //g' | sed 's/ (asserted by call to kernel)//g')
interval=10

[temperature]
command=echo $(acpi -tf | sed 's/Thermal//g' | sed 's/ok, //g' | sed 's/degrees //g')
interval=30

[battery]
command=echo $(acpi -b | sed 's/Battery 0://g' | sed 's/Unknown, 99%/Full, 99.9%/g' | sed 's/ - will never fully charge.//g')
interval=30

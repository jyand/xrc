# nvim:set ft=sh

# WM-Independent
#
{mod4, hyper} + q
        xdo {close, kill}
{mod4, hyper} + x
        xdo {close, kill}
{mod4, hyper} + Return
        {$TERMINAL -e $FILE, $TERMINAL -e fish}
mod4 + d
        dmenu_run
mod4 + b
        firejail $BROWSER
# Audio
mod4 + n
        deadbeef
mod4 + m
        pamixer -t
mod4 + parenright
        pamixer -d 5
mod4 + parenleft
        pamixer -i 5
# System Monitor
{mod4, hyper} + p
        {$TERMINAL -e ytop -fap -c vice -I 1/2, roxterm -e htop}
# Calculator
{mod4, hyper} + c
        $TERMINAL -e {julia, R}

# Utilities
mod4 + s
        scrot -s
mod4 + r
        redshift -O 2500
mod4 + e
        redshift -x
mod4 + t
        roxterm -hold -e curl wttr.in | sed 37q | bat --wrap auto
mod4 + g
        acpi -b -tf | dmenu
mod4 + v
        echo $(pamixer --get-volume-human || pamixer --get-mute) | dmenu

# BSPWM
#
hyper + {h,j,k,l}
        bspc node -s {west,south,north,east}
mod4 + {h,j,k,l}
        bspc node -f {west,south,north,east}
{mod4, hyper} + Tab
        bspc node -f {prev.local,next.local}
mod4 + {minus,plus}
        bspc desktop {prev.occupied,next.occupied} --focus
mod4 + w
        bspc desktop last --focus
mod4 + 0
        bspc desktop older.occupied --focus
{mod4, hyper} + {1-9}
        bspc {desktop -f,node -d} ^{1-9}
mod4 + a
        bspc node focused -t \~floating
mod4 + Escape
        bspc config split_ratio  {0.45,0.55}

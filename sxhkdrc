# nvim:set ft=sh

# WM-Independent
#
mod4 + q
        xdo kill
mod4 + x
        xdo close
mod4 + Return
        {$TERMINAL -e $FILE, xterm -e fish}
mod4 + d
        dmenu_run
# Audio
mod4 + m
        pamixer -t
mod4 + rightparen
        pamixer -d 5
mod4 + leftparen
        pamixer -i 5
mod4 + n
        deadbeef
# System Monitor
{mod4, hyper} + p
        {$TERMINAL -e ytop -fap -c vice -I 1/2, $TERMINAL -e htop}
# Utilities
mod4 + s
        maim -s -m 10 ~/$(date +%s).png
hyper + slash
        dispsel
mod4 + r
        redshift -O 2500
mod4 + e
        redshift -x
mod4 + t
        xterm -hold -e curl wttr.in | sed 38q | $PAGER

# BSPWM
#
{mod4, hyper} + {h,j,k,l}
        bspc node {-f, -s} {west,south,north,east}
mod4 + {y,u,i,o}
        bspc node -s {left,down,up,right}
mod4 + Tab
        bspc node -f prev.local
mod4 + w
        bspc desktop last --focus
mod4 + {minus,plus}
        bspc desktop {prev,next} --focus
{mod4, hyper} + {1-9}
        bspc {desktop -f,node -d} ^{1-9}
mod4 + a
        bspc node focused -t \~floating
mod4 + f
        bspc window -t fullscreen
mod4 + g
        bspc config split_ratio  {0.45,0.55}

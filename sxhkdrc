# nvim:set ft=sh

# WM-Independent
#
hyper + z
        doas zzz -H
{mod4, hyper} + q
        xdo {close, kill}
{mod4, hyper} + x
        xdo {close, kill}
{mod4, hyper} + period
        {$TERMINAL -e $FILE, lxterminal -e $FILE}
{mod4, hyper} + comma
        {$TERMINAL -e $FILE, lxterminal -e $FILE}
mod4 + {d, e} 
        {dmenu_run, dmenu_run -b}
# Browsers
mod4 + i
        firejail icecat -P default
mod4 + o
        firejail --net=none icecat -P reader
mod4 + b
        /opt/ungoogled-chromium/chrome --incognito
# Audio
mod4 + m
        pamixer -t
{mod4, hyper} + parenright
        {pamixer -d 5, deadbeef --prev}
{mod4, hyper} + parenleft
        {pamixer -i 5, deadbeef --next}
hyper + Return
        deadbeef --play-pause
mod4 + colon
        deadbeef --stop
# Calculator
{mod4, hyper} + c
        $TERMINAL -e {julia, R}
# Utilities
mod4 + s
        maim -s ~/Desktop/$(date +%F_%T).png
mod4 + r
        redshift -O 2500
mod4 + t
        redshift -x
{mod4, hyper} + p
        {$TERMINAL -e ytop -fap -c vice -I 1/2, $TERMINAL -e htop}
# Bar
mod4 + y
        {kill $(busybox pgrep yabar), yabar &}
mod4 + u
        bspc config top-padding 0

# BSPWM
#
hyper + {h, j, k, l}
        bspc node -s {west, south, north, east}
mod4 + {h, j, k, l}
        bspc node -f {west, south, north, east}
{mod4, hyper} + Tab
        bspc node -f {prev.local, next.local}
mod4 + {minus, plus}
        bspc desktop {prev.occupied, next.occupied} --focus
hyper + {minus, plus}
        bspc desktop {prev, next} --focus
mod4 + 0
        bspc desktop older.occupied --focus
{mod4, hyper} + {1-9}
        bspc {desktop -f,node -d} ^{1-9}
mod4 + f
        bspc node -t \~fullscreen
mod4 + a
        bspc node focused -t \~floating
mod4 + g
        bspc config automatic_scheme {alternate, spiral}

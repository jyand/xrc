# nvim:set ft=sh

# WM-Independent
#
mod4 + q
        xdo kill
mod4 + x
        xdo close
{mod4, hyper} + Return
        {$TERMINAL -e $FILE, xterm -e fish}
mod4 + d
        dmenu_run
mod4 + b
        $BROWSER
# Audio
mod4 + m
        pamixer -t
mod4 + rightparen
        pamixer -d 5
mod4 + leftparen
        pamixer -i 5
mod4 + n
        deadbeef
# System Monitor
{mod4, hyper} + p
        {xterm -e ytop -fap -c vice -I 1/2, xterm -e htop}
# Utilities
mod4 + s
        maim -s -m 10 ~/$(date +%s).png
hyper + slash
        dispsel
mod4 + r
        redshift -O 2500
mod4 + e
        redshift -x
mod4 + t
        xterm -hold -e curl wttr.in | sed 38q | $PAGER
mod4 + f
        date | dmenu

# BSPWM
#
hyper + {h,j,k,l}
        bspc node -s {west,south,north,east}
mod4 + {h,j,k,l}
        bspc node -f {west,south,north,east}
{mod4, hyper} + Tab
        bspc node -f {prev.local,next.local}
mod4 + w
        bspc desktop last --focus
mod4 + {minus,plus}
        bspc desktop {prev,next} --focus
{mod4, hyper} + {1-9}
        bspc {desktop -f,node -d} ^{1-9}
mod4 + a
        bspc node focused -t \~floating
mod4 + Escape
        bspc config split_ratio  {0.45,0.55}

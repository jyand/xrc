# nvim:set ft=sh

# WM-Independent
#
mod4 + q
        xdo kill
mod4 + x
        xdo close
mod4 + Return
        $TERMINAL -e $FILE
mod4 + d
        dmenu_run
mod4 + Escape
        xterm -e fish
# Audio
mod4 + m
        pamixer -t
mod4 + rightparen
        pamixer -d 5
mod4 + leftparen
        pamixer -i 5
mod4 + n
        deadbeef
# System Monitor
mod4 + slash
        $TERMINAL -e ytop -fap -c vice -I 1/2
mod4 + Tab
        $TERMINAL -e htop
# Utilities
mod4 + s
        maim -s -m 10 ~/$(date +%s).png
mod4 + y
        dispsel
mod4 + r
        redshift -O 2500
mod4 + e
        redshift -x
mod4 + t
        xterm -hold -e curl wttr.in | sed 38q | $PAGER

# BSPWM
#
mod4 + {h,j,k,l}
        bspc node -f {west,south,north,east}
hyper + {h,j,k,l}
        bspc node -s {west,south,north,east}
mod4 + w
        bspc desktop last --focus
mod4 + {minus,plus}
        bspc desktop {prev,next} --focus
mod4 + {1-9}
        bspc {desktop -f,node -d} ^{1-9}
mod4 + a
        bspc node focused -t \~floating

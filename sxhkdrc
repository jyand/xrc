 nvim:set ft=sh

# WM-Independent
#
hyper + z
        doas zzz -H
{mod4, hyper} + q
        xdo kill
{mod4, hyper} + x
        xdo close
{mod4, hyper} + period
        {$TERMINAL -e $FILE, kitty -e $FILE}
{mod4, hyper} + comma
        {$TERMINAL -e $FILE, kitty -e $FILE}
{mod4, hyper} + e
        {$TERMINAL -e $FILE, kitty -e $FILE}
mod4 + d 
        dmenu_run
# Browsers
mod4 + i
        firejail icecat -P default
mod4 + o
        firejail --net=none icecat -P reader
mod4 + b
        $BROWSER
mod4 + v
        $BROWSER --js-flags=--noexpose_wasm --incognito
# Audio
mod4 + m
        pamixer -t
{hyper, mod4} + parenright
        {pamixer -d 5, deadbeef --prev}
{hyper, mod4} + parenleft
        {pamixer -i 5, deadbeef --next}
{hyper, mod4} + colon
        deadbeef --stop
{hyper, mod4} + Return
        deadbeef --play-pause
{hyper, mod4} + space
        deadbeef --play-pause
# Calculator
{mod4, hyper} + c
        $TERMINAL -e {julia, R}
# Utilities
mod4 + s
        maim -s ~/Document/Images/shots/$(date +%F_%T).png
mod4 + r
        redshift -O 2500
mod4 + t
        redshift -x
{mod4, hyper} + p
        {kitty -e ytop -fap -c vice, $TERMINAL -e htop}
# Bar
mod4 + y
        pgrep yabar && kill $(pgrep yabar) || yabar &

# BSPWM
#
hyper + {h, j, k, l}
        bspc node -s {west, south, north, east}
mod4 + {h, j, k, l}
        bspc node -f {west, south, north, east}
{mod4, hyper} + Tab
        bspc node -f {next.leaf.local, prev.local}
mod4 + {minus, plus}
        bspc desktop {prev.occupied, next.occupied} --focus
hyper + {minus, plus}
        bspc desktop {prev, next} --focus
mod4 + 0
        bspc desktop older.occupied --focus
{mod4, hyper} + {1-9}
        bspc {desktop -f,node -d} ^{1-9}
mod4 + u
        bspc node -t {\~,}pseudo_tiled
mod4 + f
        bspc node -t {~,}fullscreen
mod4 + a
        bspc node focused -t {~,}floating
mod4 + g
        bspc config automatic_scheme {spiral, alternate}

# nvim:set ft=sh
set selection-clipboard clipboard
set adjust-open "width"
set recolor "true"
set recolor-keephue "true"
set scroll-page-aware "true"
set window-title-page "true"
set statusbar-h-padding 4
set statusbar-v-padding 4
set page-padding 0
set statusbar-bg \#33FF00
set statusbar-fg \#000000
set inputbar-bg \#FFFF07
set inputbar-fg \#000000
map u scroll half-up
map i scroll half-down
map r reload
map R rotate
map H zoom in
map L zoom out
map <Return> recolor
map x quit
unmap q
